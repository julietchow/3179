{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple pie chart with embedded data.",
    "data": {
        "url": "https://raw.githubusercontent.com/julietchow/3179/main/data/pie_chart.csv"
    },
    "title": {
        "text": "Energy Consumption Distribution",
        "fontSize": 14,
        "fontWeight": "bold"
      },
    "params":[
        {
          "name": "select_year",
          "value" : 2021,
          "bind": {"input":"range", "min":2000,"max":2021,"step":1,"name":"Year: "}
        }
    ],
    "transform": [
        {"filter": "datum.Year == select_year"}
    ],
    "layer":[
        {
            "mark" :{"type":"arc", "tooltip":true,"outerRadius": 100},
            "encoding": {
                "theta": {"field": "Percentage_of_Total", "title":"Percentage","type": "quantitative"},
                "color": {
                    "field": "Energy_Source",
                    "title": "Energy Source",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Coal","Natural Gas","Nuclear & Renewables","Petroleum"],
                        "range":["#DE6049","#D0DEB4","#FCF4EC","#3B739B"]
                    },
                    "legend" : null
                    },
                "order": {
                    "field": "Percentage_of_Total",
                    "type": "quantitative",
                    "sort": "descending"
                }
            }
        },
        {
            "name": "Petroleum",
            "mark": {
              "type": "text",
              "radius": 60,
              "dx": 38,
              "dy": 15
            },
            "encoding": {
              "text": {"field": "Energy_Source", "type": "nominal"},
              "color": {"value": "white"},
              "opacity": {
                  "condition": {
                  "test": "datum['Energy_Source'] == 'Petroleum'",
                  "value": 1
                  },
                  "value": 0
              }
            }
          }, 
          {
              "name": "Petroleum Value",
              "mark": {
                "type": "text",
                "radius": 60,
                "dx": 33,
                "dy": 30
              },
              "encoding": {
                "text": {"field": "Percentage_of_Total", "type": "quantitative","format":".2%"},
                "color": {"value": "white"},
                "opacity": {
                    "condition": {
                    "test": "datum['Energy_Source'] == 'Petroleum'",
                    "value": 1
                    },
                    "value": 0
                }
              }
          },
          {
            "name": "Coal",
            "mark": {
              "type": "text",
              "dx": 7,
              "dy": 40
            },
            "encoding": {
              "text": {"field": "Energy_Source", "type": "nominal"},
              "color": {"value": "white"},
              "opacity": {
                  "condition": {
                  "test": "datum['Energy_Source'] == 'Coal'",
                  "value": 1
                  },
                  "value": 0
              }
            }
          }, 
          {
              "name": "Coal Value",
              "mark": {
                "type": "text",
                "dx": 15,
                "dy": 55
              },
              "encoding": {
                "text": {"field": "Percentage_of_Total", "type": "quantitative","format":".2%"},
                "color": {"value": "white"},
                "opacity": {
                    "condition": {
                    "test": "datum['Energy_Source'] == 'Coal'",
                    "value": 1
                    },
                    "value": 0
                }
              }
          },
          {
            "name": "Natural Gas",
            "mark": {
              "type": "text",
              "dx": -55,
              "dy": 0
            },
            "encoding": {
              "text": {"field": "Energy_Source", "type": "nominal"},
              "color": {"value": "black"},
              "opacity": {
                  "condition": {
                  "test": "datum['Energy_Source'] == 'Natural Gas'",
                  "value": 1
                  },
                  "value": 0
              }
            }
          }, 
          {
              "name": "Natural Gas Value",
              "mark": {
                "type": "text",
                "dx": -65,
                "dy": 15
              },
              "encoding": {
                "text": {"field": "Percentage_of_Total", "type": "quantitative","format":".2%"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                    "test": "datum['Energy_Source'] == 'Natural Gas'",
                    "value": 1
                    },
                    "value": 0
                }
              }
          },
          {
            "name": "Nuclear &",
            "mark": {
              "type": "text",
              "dx": -27,
              "dy": -75
            },
            "encoding": {
              "text": {"value":"Nuclear &"},
              "color": {"value": "black"},
              "opacity": {
                "condition": {
                "test": "datum['Energy_Source'] == 'Nuclear & Renewables'",
                "value": 1
                },
                "value": 0
                }
            }
          }, 
          {
            "name": "Renewables",
            "mark": {
              "type": "text",
              "dx": -32,
              "dy": -60
            },
            "encoding": {
                "text": {"value":"Renewables"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                    "test": "datum['Energy_Source'] == 'Nuclear & Renewables'",
                    "value": 1
                    },
                    "value": 0
                    }    
            }
          }, 
          {
              "name": "Nuclear & Renewables Value",
              "mark": {
                "type": "text",
                "dx": -20,
                "dy": -45
              },
              "encoding": {
                "text": {"field": "Percentage_of_Total", "type": "quantitative","format":".2%"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                    "test": "datum['Energy_Source'] == 'Nuclear & Renewables'",
                    "value": 1
                    },
                    "value": 0
                }
              }
          }
    ],
    "config": {
        "style": {
          "cell": {
            "stroke": "transparent"
          }
        }
    }
}
  