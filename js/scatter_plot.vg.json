{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": {
        "text": "Energy Production vs. Energy Consumption Per Capita",
        "subtitle": "Data visualized on log-log scale"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/julietchow/3179/main/data/scatter.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "select_continent",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Africa",
            "Asia",
            "Oceania",
            "South America",
            "Antarctica",
            "Europe",
            "North America"
          ],
          "labels": [
            "All",
            "Africa",
            "Asia",
            "Oceania",
            "South America",
            "Antarctica",
            "Europe",
            "North America"
          ],
            "name": "Continent : "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Population > Population_Above"},
      {"filter": "datum.Total_production> 0.1"},
      {"filter": "datum.Total_Consumption> 0.1"},
      {
        "filter": "select_continent == null || datum.Continent == select_continent"
      }
    ],
    "encoding": {
      "x": {
        "field": "Total_Consumption",
        "type": "quantitative",
        "title": "Energy Consumption Per Capita (Sextillion kWh)",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [0.1, 10000000]}
      },
      "y": {
        "field": "Total_production",
        "type": "quantitative",
        "title": "Energy Production Per Capita (Sextillion kWh)",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [0.1, 10000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Africa",
                "Asia",
                "Oceania",
                "South America",
                "Antarctica",
                "Europe",
                "North America"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#a65628",
                "#377eb8",
                "#ee5397"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field":"Total_Consumption","title": "Energy Consumption", "type": "quantitative", "format": ",.2f"},
            {"field":"Total_production","title": "Energy Production", "type": "quantitative", "format": ",.2f"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Energy Consumption Per Capita (Sextillion kWh)", "type": "quantitative", "format": ",.2f"},
            {"field": "Energy Production Per Capita (Sextillion kWh)", "type": "quantitative", "format": ",.2f"}
          ]
        }
      }
    ]
  }