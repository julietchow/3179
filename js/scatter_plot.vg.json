{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 598,
    "height": 470,
    "title": {
        "text": "Production Per Capita vs. Consumption Per Capita",
        "subtitle": "Data visualized on log-log scale"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/julietchow/3179/main/data/consumption_production.csv"
    },
    "params": [
      {
        "name": "select_continent",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Africa",
            "Asia",
            "Oceania",
            "South America",
            "Antarctica",
            "Europe",
            "North America"
          ],
          "labels": [
            "All",
            "Africa",
            "Asia",
            "Oceania",
            "South America",
            "Antarctica",
            "Europe",
            "North America"
          ],
            "name": "Continent : "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Total_production> 1"},
      {"filter": "datum.Total_Consumption> 1"},
      {"filter": "select_continent == null || datum.Continent == select_continent"}
    ],
    "encoding": {
      "x": {
        "field": "Total_Consumption",
        "type": "quantitative",
        "title": "Consumption Per Capita Per Capita (Sextillion kWh)",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 10000000]}
      },
      "y": {
        "field": "Total_production",
        "type": "quantitative",
        "title": "Production Per Capita Per Capita (Sextillion kWh)",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 10000000]}
      }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
            "size": {
                "field": "Population",
                "type": "quantitative",
                "scale": {
                "type": "threshold",
                "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
                "range": [10, 50, 150, 200, 300, 400]
                },
                "legend": {"format": ".1s"}
            },
            "color": {
                "field": "Continent",
                "type": "nominal",
                "scale": {
                "domain": [
                    "Africa",
                    "Asia",
                    "Oceania",
                    "South America",
                    "Antarctica",
                    "Europe",
                    "North America"
                ],
                "range": [
                    "#b50b0b",
                    "#984ea3",
                    "#64a184",
                    "#a6cee3",
                    "#a65628",
                    "#377eb8",
                    "#fc46aa"
                ]
                }
            },
            "opacity": {"value": 0.7},
            "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Population", "type": "quantitative", "format": ",.2f"},
                {"field":"Total_Consumption","title": "Consumption Per Capita", "type": "quantitative", "format": ",.2f"},
                {"field":"Total_production","title": "Production Per Capita", "type": "quantitative", "format": ",.2f"}
            ]
          }
        },
        {
            "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
            },
            "encoding": {
            "text": {"field": "Country", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
                "condition": {
                "test": "datum['Country'] == 'Hong Kong' || datum['Country'] == 'Singapore' || datum['Country'] == 'Angola' ||datum['Country'] == 'China' || datum['Country'] == 'Russia' || datum['Country'] == 'Saudi Arabia' ||  datum['Country'] == 'Australia'",
                "value": 1
                },
                "value": 0
            },
            "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Population", "type": "quantitative", "format": ",.2f"},
                {"field": "Total_Consumption","title": "Consumption Per Capita", "type": "quantitative", "format": ",.2f"},
                {"field": "Total_production","title": "Production Per Capita", "type": "quantitative", "format": ",.2f"}
                ]
            }
            },
            {
                "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 53,
                "fontSize": 11.5,
                "fontStyle": "italic"
                },
                "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                    "test": "datum['Country'] == 'Canada'",
                    "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Population", "type": "quantitative", "format": ",.2f"},
                    {"field": "Total_Consumption","title": "Consumption Per Capita", "type": "quantitative", "format": ",.2f"},
                    {"field": "Total_production","title": "Production Per Capita", "type": "quantitative", "format": ",.2f"}
                ]
                }
            },
            {
                "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 46,
                "fontSize": 11.5,
                "fontStyle": "italic"
                },
                "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                    "test": "datum['Country'] == 'Japan'",
                    "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Population", "type": "quantitative", "format": ",.2f"},
                    {"field":"Total_Consumption","title": "Consumption Per Capita", "type": "quantitative", "format": ",.2f"},
                    {"field":"Total_production","title": "Production Per Capita", "type": "quantitative", "format": ",.2f"}
                ]
                }
            },
            {
                "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 40,
                "fontSize": 11.5,
                "fontStyle": "italic"
                },
                "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                    "test": "datum['Country'] == 'India'",
                    "value": 1
                    },
                    "value": 0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Population", "type": "quantitative", "format": ",.2f"},
                    {"field":"Total_Consumption","title": "Consumption Per Capita", "type": "quantitative", "format": ",.2f"},
                    {"field":"Total_production","title": "Production Per Capita", "type": "quantitative", "format": ",.2f"}
                ]
                }
            },
            {
              "mark": {
              "type": "text",
              "align": "right",
              "baseline": "middle",
              "dx": 80,
              "fontSize": 11.5,
              "fontStyle": "italic"
              },
              "encoding": {
              "text": {"field": "Country", "type": "nominal"},
              "color": {"value": "black"},
              "opacity": {
                  "condition": {
                  "test": "datum['Country'] == 'United States'",
                  "value": 1
                  },
                  "value": 0
              },
              "tooltip": [
                  {"field": "Country", "type": "nominal"},
                  {"field": "Population", "type": "quantitative", "format": ",.2f"},
                  {"field":"Total_Consumption","title": "Consumption Per Capita", "type": "quantitative", "format": ",.2f"},
                  {"field":"Total_production","title": "Production Per Capita", "type": "quantitative", "format": ",.2f"}
              ]
              }
          }
    ]
}